<header class=" text-white px-3 d-flex justify-content-between align-items-center" style="background-color: #26408B;">
  <div class="d-flex align-items-center ">
    <div class=" ">
      <%= image_tag 'logo5.png', alt: 'Logo', class: 'logo'  %>
    </div>
    <div class="vertical-line"></div>
    <div class="">
      <h2 class="fw-bold">Dental Credentialing<br> Manager</h2>
    </div>
  </div>
  <div class="d-flex align-items-center">
    <i class="fas fa-bell fa-lg me-3"></i>
    <div class="rounded-circle bg-white text-dark fw-bold d-flex justify-content-center align-items-center" style="width: 28px; height: 28px;">JD</div>
    <i class="fa-solid fa-circle-user ms-2 fa-3x fs-3"></i>
  </div>
</header>
<div class="d-flex vh-100">
  <nav class="bg-white p-3 sidebar">
    <div class=" fw-bold">
      <a href="#" class=" list-group-item list-group-item-action ">
        <i class="fa-solid fa-box-open me-3"></i> APPLICATION
      </a>
      <a href="" class="list-group-item list-group-item-action ">
        <i class="fa-solid fa-location-arrow me-3 "></i> LOCATIONS
      </a>
      <a href="<%= doctors_path %>" class="list-group-item list-group-item-action active ">
        <i class="fa-solid fa-stethoscope me-3 "></i> DOCTORS
      </a>
      <a href="#" class="list-group-item list-group-item-action" style="font-size: 15.2px;">
        <i class="fa-solid fa-truck-ramp-box me-3"style="font-size: 12px;"></i>PAR TRACKING 
      </a>
      <a href="#" class="list-group-item list-group-item-action ">
        <i class="fas fa-question-circle me-3 "></i> HELP / CODES
      </a>
      <a href="#" class="list-group-item list-group-item-action ">
        <i class="fa-solid fa-door-open me-3"></i> LOG OUT
      </a>
    </div>
  </nav>
  <div class="vertical-line1"></div> 

  <main class="flex-grow-1 p-2 bg-light ">
    <div class="mx-2 px-4">
      <h2 class="mt-3">
        DENTAL DEMONSTRATION OFFICE DOCTOR MANAGEMENT
        <i class="fas fa-info-circle"></i>
      </h2><hr>
      <div class="row ">
        <div class="col-md-8">
          <button class="btn1 btn-blue search-btn">EXPIRATION REPORT</button>
          <button class="btn1 btn-blue search-btn">LOCATION REPORTS</button>
        </div>
        <div class="col-md-4 text-center">
          <div class="" >
            <%= link_to 'ADD NEW DOCTOR', new_doctor_path, class: "btn1 btn btn-danger mx-3 " %>
            <button class="btn1 btn btn-danger ">REPORTS</button>
          </div>
        </div>
      <div>
        
      </div >
      <div class="row">
        <div class="input-group my-4 col-md-8">  
            <input type="text" class="form-control search-input" placeholder="Find By Name..." style="border-radius: 15px 0px 0px 15px;">
            <button class="btn1 btn-blue search-btn" id="search-btn">SEARCH</button>
          <button class="btn1 btn btn-danger ms-4">FULL LIST</button>
        </div>
      </div>
    </div>

    <div class="mt-4 ">
      <table class="table text-center pb-2">
        <thead class="table-head">
          <tr>
            <th>#</th>
            <th>FULL NAME</th>
            <th>DOCTOR</th>
            <th>ADMIN</th>
            <th>ACTIVE</th>
            <th>HAS OFFICE ASSIGNED</th>
            <th>DOCTOR PROFILE (LAST UPDATE)</th>
            <th>GENERATE FORMS</th>
          </tr>
        </thead>
        <tbody class="border fw-bold p-3">
          <% @doctors.each do |doctor| %>
            <tr>
              <td><%= doctor.id %></td>
              <td><%= doctor.full_name %></td>
              <td>
                <%= check_box_tag "doctor_#{doctor.id}", '1', doctor.doctor %>
              </td>
              <td>
                <%= check_box_tag "admin_#{doctor.id}", '1', doctor.admin %>
              </td>
              <td>Yes</td>
              <td>Yes</td>
              <td>
                <%= link_to 'Edit Profile(6/23/2023)', edit_personal_doctor_path(doctor) ,class:'btn btn-danger' %>
              </td>
              <td><button class="btn1 btn-blue ">GENERATE FORMS</button></td>
            </tr>
          <% end %>
        </tbody>
      </table>
      <div class="d-flex justify-content-between align-items-center mt-4 fw-bold">
      <span>Page 1 of 1</span>
      <span class="badge bg-blue p-4 mx-4">1</span>
    </div>
    </div>
  </main>
</div>
