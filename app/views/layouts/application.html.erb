<!DOCTYPE html>
<html>
  <head>
    <title>DentalCredentialManager</title>
    <meta name="viewport" content="width=device-width, initial-scale=1">
    
    <!-- CSRF Meta Tag for AJAX requests -->
    <%= csrf_meta_tags %> <!-- This will include the CSRF token -->

    <%= csp_meta_tag %> <!-- Content Security Policy Meta Tag -->

    <!-- Include stylesheets -->
    <%= stylesheet_link_tag "application", "data-turbo-track": "reload" %>

    <!-- Include JavaScript Importmap tags -->
    <%= javascript_importmap_tags %>

    <!-- External Fonts and Bootstrap -->
    <link href="https://cdnjs.cloudflare.com/ajax/libs/font-awesome/6.4.0/css/all.min.css" rel="stylesheet">
    <link href="https://cdn.jsdelivr.net/npm/bootstrap@5.3.0/dist/css/bootstrap.min.css" rel="stylesheet">
    <script src="https://ajax.googleapis.com/ajax/libs/jquery/3.6.0/jquery.min.js"></script>

  </head>

  <body>
    <!-- Render the page content here -->
    <%= yield %>

    <!-- Flash messages for notice and alert -->
    <p class="notice"><%= notice %></p>
    <p class="alert"><%= alert %></p>

    <!-- Include Bootstrap JS -->
    <script src="https://cdn.jsdelivr.net/npm/bootstrap@5.3.0/dist/js/bootstrap.bundle.min.js"></script>

    <!-- Include custom JavaScript to attach CSRF token to AJAX requests -->
    <script>
      // Ensure CSRF token is included in every AJAX request
      $(document).ajaxSend(function(e, xhr, options) {
        var token = $('meta[name="csrf-token"]').attr('content');
        if (token) {
          xhr.setRequestHeader('X-CSRF-Token', token);
        }
      });
    </script>
  </body>
</html>